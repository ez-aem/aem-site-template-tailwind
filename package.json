{
  "name": "aem-site-template-tailwind",
  "version": "1.1.21",
  "description": "Standard AEM Site Template built with TailwindCSS used as a starter template for general purpose websites",
  "license": "MIT License, Copyright 2020 Adobe Systems Incorporated",
  "scripts": {
    "build": "aem-site-template-builder",
    "build:theme": "cd theme && npm run build",
    "deploy": "curl -u admin:admin -F file=@aem-site-template-tailwind-latest.zip http://localhost:4502/conf/global/site-templates.import.html",
    "lint:check": "eslint theme --ext .ts,.js,.jsx,.tsx",
    "lint:fix": "eslint --fix theme --ext .ts,.js,.jsx,.tsx",
    "live": "cd theme && npm run live",
    "prepare": "husky install",
    "prettier:check": "prettier --check ./theme/**/*.{css,html,js,jsx,ts,tsx}",
    "prettier:fix": "prettier --write ./theme/**/*.{css,html,js,jsx,ts,tsx}"
  },
  "devDependencies": {
    "@adobe/aem-site-template-builder": "2.2.2",
    "@prettier/plugin-xml": "^1.2.0",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.5",
    "prettier": "^2.5.1",
    "typescript": "^4.5.4"
  },
  "siteTemplate": {
    "title": "AEM Site Template Tailwind",
    "createdBy": "Adobe",
    "useCases": [
      "General purpose sites, corporate marketing sites, landing pages, blog sites, content marketing"
    ],
    "docsUrl": "",
    "showcaseUrl": "",
    "sourceRepositoryUrl": "https://github.com/ez-aem/aem-site-template-tailwind",
    "openItem": "{Path}/en/home"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --cache --fix",
      "prettier --write"
    ],
    "*.css": [
      "prettier --write"
    ],
    "*.html": [
      "prettier --write"
    ],
    "*.xml": [
      "prettier --write"
    ]
  }
}
