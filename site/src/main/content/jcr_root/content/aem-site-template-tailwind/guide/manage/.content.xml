<?xml version="1.0" encoding="UTF-8" ?>
<jcr:root
    xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
    xmlns:cq="http://www.day.com/jcr/cq/1.0"
    xmlns:jcr="http://www.jcp.org/jcr/1.0"
    xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Page"
>
    <jcr:content
        cq:template="/conf/aem-site-template-tailwind/settings/wcm/templates/two-column-grid"
        jcr:primaryType="cq:PageContent"
        jcr:title="Manage"
        sling:resourceType="core/wcm/components/page/v2/page"
        pwaCachestrategy="staleWhileRevalidate"
        pwaDisplay="standalone"
        pwaOrientation="any"
    >
        <root
            jcr:primaryType="nt:unstructured"
            sling:resourceType="core/wcm/components/container/v1/container"
        >
            <main
                jcr:primaryType="nt:unstructured"
                sling:resourceType="core/wcm/components/container/v1/container"
                layout="responsiveGrid"
            >
                <container
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="core/wcm/components/container/v1/container"
                    layout="responsiveGrid"
                >
                    <container
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="core/wcm/components/container/v1/container"
                        layout="responsiveGrid"
                    >
                        <title
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="core/wcm/components/title/v2/title"
                        />
                        <text
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="core/wcm/components/text/v2/text"
                            text="&lt;p>AEM gives you the power and flexibility to build any type of site you can imagine. This guide will help you understand how to work with assets like photos and videos, as well as site elements such as logos and content. You'll also learn how to work with existing pages, like the homepage, and create new pages from scratch, even taking you right through the publishing process, getting your site up and running in a matter of minutes. &lt;/p>&#xd;&#xa;"
                            textIsRich="true"
                        />
                        <button
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Keep Reading"
                            sling:resourceType="core/wcm/components/button/v1/button"
                            link="/content/aem-site-template-tailwind/guide/manage/assets"
                        />
                    </container>
                    <container_copy
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="core/wcm/components/container/v1/container"
                        layout="responsiveGrid"
                    >
                        <list
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="core/wcm/components/list/v2/list"
                            childDepth="1"
                            linkItems="true"
                            listFrom="children"
                            parentPage="/content/aem-site-template-tailwind/guide/manage"
                            showDescription="true"
                            showModificationDate="false"
                            sortOrder="asc"
                            tagsMatch="any"
                        />
                    </container_copy>
                </container>
            </main>
        </root>
    </jcr:content>
    <assets />
    <site-elements />
    <authoring />
    <create-a-page />
    <publish />
</jcr:root>
